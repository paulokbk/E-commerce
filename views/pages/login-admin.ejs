<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <link rel="stylesheet" href="/stylesheets/reset.css" />
    <link rel="stylesheet" href="/stylesheets/theme.css" />
    <link rel="stylesheet" href="/stylesheets/index.css" />
    <link rel="stylesheet" href="/stylesheets/login.css" />
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>Vivara</title>
  </head>

    <%- include("../partials/cut-header.ejs") %>

  <body>



<main>
    <section id="section_login">
      <form action="/admin/login" method="post">
        <div id="painel_login" class="display_flex_column">
          <div id="title" class="display_flex_centralized">
            <p>ADMINISTRADOR</p>
            
          </div>

         <% if(error){ %>
          <span style="color: red ; font-size: 15px;"><%= error %></span>
         <% } %> 
          
          <div class="login_e_senha">
            <div id="email">
              <label for="email">Email</label>
              <input type="email" name="email" class="input" />
            </div>
            <div id="senha">
              <label for="password">Senha</label>
              <input type="password" name="senha" class="input" />
            </div>
            <div id="esqueci_senha">
              <p>Esqueci a senha</p>
            </div>
          </div>

          <div>
            <button
              id="entrar"
              class="bottons display_flex_centralized"
              type="submit"
            >
              ENTRAR</button>
          </div>
        </div>
      </form>
    </section>
  </main>

  <%- include('../partials/footer.ejs') %>