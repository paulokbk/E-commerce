<!DOCTYPE html>
<html lang="pt-br">

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous" />
    <link rel="stylesheet" href="/stylesheets/reset.css" />
    <link rel="stylesheet" href="/stylesheets/theme.css" />
    <link rel="stylesheet" href="/stylesheets/index.css"/>
    <link rel="icon" type="image/png" sizes="16x16" href="/images/favicons/favicon-16x16.png" />
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Vivara</title>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
    crossorigin="anonymous"></script>
</head>

<body>
        <%- include("../partials/header.ejs") %>

        <main class="tamanho_maximo_conteudo">
            <a href="https://api.whatsapp.com/send/?phone=%2B5564981430962&text&type=phone_number&app_absent=0"><img
                    class="whatsapp_logo" src="images/whatslogo.png" alt="whatsapp logo" /></a>

        <section class="banner_home">
            <% if(banner.background){ %>
                <img class="banner_principal" src="images/<%= banner.background %>" alt="banner1" />
            <% } %>
        </section>
        
            
            <% if(banner.typePage == 'home'){ %>
                    <%- include("../partials/nav.categoria.ejs") %> 
                    <%- include("../partials/mais_vendidos.ejs") %> 
                    <%- include("../partials/carrosel.ejs") %>     
            <% } %>   

            <section class="experiencia_vivara">
                <section class="zona_titulo">
                    <span class="linha_texto"></span>
                    <h1 class="h1_titulo texto_garamond">A Experiência Vivara</h1>
                    <h2 class="h2_titulo texto_roboto">
                        CONHEÇA NOSSOS PRODUTOS EXCLUSIVOS
                    </h2>
                </section>
            </section>
            <section class="grade_produtos display_flex">
               <% if(produtos && produtos.length) { %> 
                    <% for (let i=0; i < produtos.length; i++) { %>
                        <% console.log(produtos[i]?.image1) %>
                        <div class="item_produto">
                            <div class="produto_foto">
                                <img src="produtos.images/<%= produtos[i].imagem %>" alt="aliança" />
                            </div>
                            <div class="produto_info display_flex_column">
                                <h2 class="titulo_produto texto_roboto texto_cinza"><%= produtos[i].status %></h2>
                                <div class="item_nome"><%= produtos[i].nome %></div>
                                <div class="item_preco display_flex_column texto_roboto">
                                    <h2 class="avista">R$<%= produtos[i].preco %>,00</h2>
                                    <h3 class="parcelado texto_cinza">10x de R$<%= Math.round(produtos[i].preco/10) %>,00</h3>
                                    <div class="botao_comprar texto_branco cor_laranja">COMPRAR</div>
                                </div>
                            </div>
                        </div>

                <% } } %>

            </section>
        </main>

<%- include("../partials/footer.ejs") %>
