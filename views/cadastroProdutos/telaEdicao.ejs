        <br><br><label for="">Categorias:</label><br>



        <input type="checkbox" id="tipo1" name="tipos" value="joias" <% produto[0].tipos.forEach(tipo =>{ %>
            <% if(tipo == "joias"){%>
                checked
               <% }}) %>>
        <label for="tipo1"> Joias</label><br>

        <input type="checkbox" id="tipo2" name="tipos" value="casamento" <% produto[0].tipos.forEach(tipo =>{ %>
            <% if(tipo == "casamento"){%>
                checked
               <% }}) %>>
        <label for="tipo2"> Casamento</label><br>

        <input type="checkbox" id="tipo3" name="tipos" value="relogios" <% produto[0].tipos.forEach(tipo =>{ %>
            <% if(tipo == "relogios"){%>
                checked
               <% }}) %>>
        <label for="tipo3"> Relogios</label><br>

        <input type="checkbox" id="tipo4" name="tipos" value="acessorios" <% produto[0].tipos.forEach(tipo =>{ %>
            <% if(tipo == "acessorios"){%>
                checked
               <% }}) %>>
        <label for="tipo4"> Acessorios</label><br>

        <input type="checkbox" id="tipo5" name="tipos" value="masculino"<% produto[0].tipos.forEach(tipo =>{ %>
            <% if(tipo == "masculino"){%>
                checked
               <% }}) %>>
        <label for="tipo5"> Masculino</label><br><br>

        <input type="submit" value="SALVAR">  
       
    </form>
</body>
</html>